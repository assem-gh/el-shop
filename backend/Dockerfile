FROM openjdk:19

EXPOSE 8080

ADD  backend/target/app.jar app.jar

ENV AWS_ACCESS_KEY ${serets.AWS_ACCESS_KEY}
ENV AWS_SECRET_KEY ${serets.AWS_SECRET_KEY}
ENV AWS_BUCKET_NAME ${serets.AWS_BUCKET_NAME}
ENV AWS_TEST_BUCKET_NAME ${serets.AWS_TEST_BUCKET_NAME}
ENV CLIENT_BASE_URL ${serets.CLIENT_BASE_URL}
ENV CLIENT_BASE_URL ${serets.CLIENT_BASE_URL}
ENV MONGODB_URI ${serets.MONGODB_URI}



CMD ["sh", "-c", "java -jar app.jar"]